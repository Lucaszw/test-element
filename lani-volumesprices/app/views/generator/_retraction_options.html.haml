.btn-group
  %button.btn.btn-danger.dropdown-toggle.options{"data-toggle" => "dropdown", type: "  button"}
    Retraction Options
    %span.caret
  .dropdown-menu.wide{role: "menu"}      
    = f.label :retract_length
    (mm) :
    \#{f.number_field :retract_length , :class => "form-control"}
    %br/
    = f.label :retract_speed
    (mm/s) :
    \#{f.number_field :retract_speed , :class => "form-control"}
    %br/
    = f.label :retract_restart_extra
    (mm) :
    \#{f.number_field :retract_restart_extra , :class => "form-control"}
    %br/
    = f.label :retract_before_travel
    (mm) :
    \#{f.number_field :retract_before_travel , :class => "form-control"}
    %br/
    = f.label :retract_lift
    (mm) :
    \#{f.number_field :retract_lift , :class => "form-control"}
    %br/
    = f.label :retract_layer_change
    ? :
    = f.check_box :retract_layer_change , {} , "yes", "no"
    %br/
    = f.label :wipe
    ? :
    = f.check_box :wipe ,{}, "yes", "no"
