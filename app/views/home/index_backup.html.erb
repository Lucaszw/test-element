<% if session[:id] == nil %>

<div id="header">
	<div id="featuredHowTo"></div><!--how to-->
	<table class="verticalAlign">
		<tr>
			<td>
				<img src="/assets/laniFeaturedLogo.png" width="259">
			</td>
		</tr>
	</table>
	<div id="featuredType"></div>

	<!-- Add scroll effect to expand button : -->

	<div id="expandButton"></div><!--expandButton-->
</div><!--header-->

<style>
	body {
		min-height: 1200px;
	}	
	#header table {
		background-image: url("/assets/featuredBackground.jpg");
		background-size: cover;
		width: 100%;
		height: 482px;
		text-align: center;
	}
	#header #featuredType {
		margin-top: -50px;
		width: 100%;
		height: 20px;
		background-image: url("/assets/featuredType.png");
		background-size:348px;
		background-repeat: no-repeat;
		background-position: center;
	}
	#header #featuredHowTo {
		position: fixed;
		background-image: url("/assets/featuredHowTo.png");
		width:103px;
		height:47px;
		background-size: 100%;
		right: 40px;
		top:26px;
	}

	#expandButton {
		position: fixed;
		background-image: url("/assets/expandNavFeatured.png");
		height:22px;
		width: 19px;
		float:right;
		background-size: 100%;
		background-repeat: no-repeat;
		top : 8px;
		right: 20px;
	}


}
</style>
<script type="text/javascript">
	$( document ).ready(function() {
		$("#navbar").css('visibility', 'hidden');
	});
	var interval = setInterval(function() {
		if ($(window).scrollTop() >= 482) {
			$( "#navbar" ).css( 'visibility', 'visible' );
			$( "#expandButton" ).css( 'visibility', 'hidden' );
			$( "#featuredHowTo" ).css( 'visibility', 'hidden' );
		}else{
			$( "#navbar" ).css( 'visibility', 'hidden' );
			$( "#expandButton" ).css( 'visibility', 'visible' );
			$( "#featuredHowTo" ).css( 'visibility', 'visible' );   	
		}
	}, 1);

</script>
<%end%>
<div id="logged_out_anchor">hi</div>

