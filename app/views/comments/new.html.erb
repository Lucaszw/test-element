
<div class="new_comment_wrapper">
<% if @logged_in == true %>
	<h1 style="text-align:left;">Add Comment : </h1>
	<%= form_for :comments, url: {controller: "comments" ,action: "create"} do |f| %>
			<%= f.label "Title :"%>
			<br>
			<%= f.text_field :title %>
			<br>
			<%= f.label "Description :"%>
			<br>
			<%= f.text_area :description %>
			<br>

			<%= f.hidden_field :model_id , :value => @model.id%>
			<br><br><br>
			<%= f.submit("Add comment") %>
	<% end
else %>
<h1 style="text-align:left;">Please login to leave a comment. </h1>
<% end %>
</div>			

